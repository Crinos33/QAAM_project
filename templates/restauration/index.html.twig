{% extends 'base.html.twig' %}

{% block title %}Restauration index{% endblock %}

{% block body %}
    <h1>Restauration index</h1>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restauration in restaurations %}
            <tr>
                <td><p style="color:#0fff06;font-weight:bold;">{{ restauration.id }}</p></td>
                <td><p style="color:#fff902;font-weight:bold;">{{ restauration.name }}</p></td>
                <td>
                    <a href="{{ path('restauration_show', {'id': restauration.id}) }}">show</a>
                    <a class="btn btn-warning" style="color:#000000" href="{{ path('restauration_edit', {'id': restauration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-dark" style="color: #F5871F" href="{{ path('restauration_new') }}">Create new</a>
{% endblock %}
