{% extends 'base.html.twig' %}

{% block title %}Status index{% endblock %}

{% block body %}
    <h1>Status index</h1>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for status in statuses %}
            <tr>
                <td><p style="color:#0fff06;font-weight:bold;">{{ status.id }}</p></td>
                <td><p style="color:#fff902;font-weight:bold;">{{ status.name }}</p></td>
                <td>{{ status.value }}</td>
                <td>
                    <a href="{{ path('status_show', {'id': status.id}) }}">show</a>
                    <a class="btn btn-warning" style="color:#000000" href="{{ path('status_edit', {'id': status.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-dark" style="color: #F5871F" href="{{ path('status_new') }}">Create new</a>
{% endblock %}
