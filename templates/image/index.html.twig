{% extends 'base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block body %}
    <h1>Image index</h1>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Path</th>
                <th>Imgpath</th>
                <th>Alt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td><p style="color:#0fff06;font-weight:bold;">{{ image.id }}</p></td>
                <td>{{ image.path }}</td>
                <td><img src="{{ asset(image.imgpath) }}" width="200px"/></td>
                <td>{{ image.alt }}</td>
                <td>
                    <a href="{{ path('image_show', {'id': image.id}) }}">show</a>
                    <a class="btn btn-warning" style="color:#000000" href="{{ path('image_edit', {'id': image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-dark" style="color: #F5871F" href="{{ path('image_new') }}">Create new</a>
{% endblock %}
