{% extends 'base.html.twig' %}

{% block title %}Delivery index{% endblock %}

{% block body %}
    <h1>Delivery index</h1>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>Definition</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for delivery in deliveries %}
            <tr>
                <td><p style="color:#0fff06;font-weight:bold;">{{ delivery.id }}</p></td>
                <td><p style="color:#fff902;font-weight:bold;">{{ delivery.name }}</p></td>
                <td>{{ delivery.value }}</td>
                <td>{{ delivery.definition }}</td>
                <td>
                    <a href="{{ path('delivery_show', {'id': delivery.id}) }}">show</a>
                    <a class="btn btn-warning" style="color:#000000" href="{{ path('delivery_edit', {'id': delivery.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-dark" style="color: #F5871F" href="{{ path('delivery_new') }}">Create new</a>
{% endblock %}
